{
	"compilerOptions": {
	  "lib": [
		"dom",
		"es6"
	  ],
	  "target": "es5",
	  "module": "es6",
	  "moduleResolution": "node",
	  "jsx": "preserve",
	  "isolatedModules": false,
	  "experimentalDecorators": true,
	  "noImplicitAny": true,
	  "noImplicitThis": true,
	  "strictNullChecks": true,
	  "removeComments": true,
	  "suppressImplicitAnyIndexErrors": true
	},
	"include": [
	  "./**/*.ts",
	  "./**/*.tsx"
	],
	"exclude": [
	  "node_modules",
	  "tools"
	],
	"compileOnSave": false
  }